<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/furnaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/size_16dp"
        android:text="@string/furnaceTitle"
        android:textColor="@color/light_mode_txt"
        android:textSize="@dimen/size_16sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/furnaceImage"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/today"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fireplace" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/furnaceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:fontWeight="400"
        android:text="@string/furnaceInfo"
        android:textColor="@color/light_mode_txt"
        android:textSize="@dimen/size_16sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/addFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="13dp"
        android:fontWeight="400"
        android:text="@string/add_favorite"
        android:textColor="@color/light_mode_txt"
        android:textSize="@dimen/size_16sp" />

    <ImageButton
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/favorite"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/heart" />

</LinearLayout>